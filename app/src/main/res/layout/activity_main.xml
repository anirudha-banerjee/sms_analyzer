<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.godslayer69.android.sms_analyzer.MainActivity">

    <Button
        android:id="@+id/startSmsAnalysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/readsmsbtn"
        android:typeface="monospace"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="normal"
        android:elevation="1dp"/>

    <Button
        android:id="@+id/viewSmsAnalysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startSmsAnalysis"
        android:layout_centerHorizontal="true"
        android:text="@string/viewanalysisbtn"
        android:typeface="monospace"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="normal"
        android:elevation="1dp"/>

</RelativeLayout>
