<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.godslayer69.android.sms_analyzer">

    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ele_sms_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ele_sms_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.godslayer69.android.sms_analyzer.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.godslayer69.android.sms_analyzer.SmsCategoryActivity"
            android:label="@string/title_activity_sms_category"
            android:parentActivityName="com.godslayer69.android.sms_analyzer.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.godslayer69.android.sms_analyzer.MainActivity" />
        </activity>
    </application>

</manifest>